for (prop in navigator.gpu) console.log(prop)

globalThis.main = async function main()
{
  const props = [];

  for (prop in navigator.gpu)
    props.push(prop);

  test('navigator.gpu has requestAdapter method', typeof navigator.gpu.requestAdapter, 'function');
  test('navigator.gpu has enumerable props',      props.length > 0);
  test('enumerable props include requestAdapter', props.includes('requestAdapter'));
  console.log('Done.');
}
